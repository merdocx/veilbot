[Unit]
Description=VeilBot Admin Panel
After=network.target

[Service]
Type=simple
User=root
ExecStart=/usr/bin/python3.11 -m uvicorn admin.main:app --host 0.0.0.0 --port 8001
WorkingDirectory=/root/veilbot/admin
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1
Environment=PYTHONPATH=/root/veilbot
EnvironmentFile=/root/veilbot/.env
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 