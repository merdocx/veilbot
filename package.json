{
  "name": "veilbot-admin-ui",
  "version": "1.0.0",
  "private": true,
  "description": "Tooling and quality gates for the VeilBot admin UI kit.",
  "scripts": {
    "lint:js": "eslint admin/static/js --ext .js",
    "lint:css": "stylelint \"admin/static/css/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write \"admin/static/{css,js}/**/*.{css,js}\" \"admin/templates/**/*.html\" \"docs/**/*.md\"",
    "test:py": "python3 -m pytest",
    "test": "npm run lint && npm run test:py"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0"
  }
}

